<%= form_with(model: training, local: true) do |form| %>
  <% if training.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(training.errors.count, "error") %> prohibited this training from being saved:</h2>

      <ul>
        <% training.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label @label || :name %>
    <%= form.text_field :name, class: "form-control", required: true %>
  </div>


  <% if @parent %>
    <%= form.hidden_field :parent_id, :value => @parent.id %>
  <% end %>

  <% if @category != "" %>
    <%= form.hidden_field :category, :value => @category %>
  <% end %>


  <% if @category=="option" %>
  <div class="form-group">
    <%= form.label :correct %>
    <%= form.select :correct, ['yes', 'no'], {}, class: 'form-control' %>
  </div>
  <% end %>


  <div class="form-group">
    <%= form.label @detail || :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>


    <div class="form-group">
      <%= form.label :content %>
      <%= form.rich_text_area :content %>
    </div>


  <div class="actions">
    <%= form.submit class: "btn btn-outline-primary" %>
  </div>
<% end %>
