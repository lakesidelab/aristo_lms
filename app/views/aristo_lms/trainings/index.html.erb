<p id="notice"><%= notice %></p>

<h1>Trainings</h1>


  <div id="tracks" class="row" data-url="<%= sort_trainings_path %>">
    <% @trainings.each do |training| %>
      <div class="col-sm-3 col-md-3" id="<%= dom_id(training) %>">
        <div class="card h-100 border border-primary">
          <div class="card-body">
            <h3 class="card-title training-title"><%= training.name %></h3>
            <p class="card-text"><%= training.description %></p>
          </div>
          <div class="card-body d-flex flex-column">
            <%= link_to 'Show', training, class: "btn btn-outline-primary mt-auto"%>
            <%= link_to 'Edit', edit_training_path(training), class: "btn btn-outline-primary mt-auto" %>
            <%= link_to 'Destroy', training, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger mt-auto" %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="col-sm-3 col-md-3">
      <%= link_to new_training_path, class: "hover-link" do%>
        <div class="card h-100 border border-primary new-content-add-card">
          <div class="card-body">
            <center>
              <%= image_tag("aristo_lms/plus.png", style: "width:100%") %>
              <h3>Add new track</h3>
            </center>
          </div>
        </div>
      </div>
      <% end %>
  </div>
